<h1>Task List</h1>

<ul>
  <% @tasks.each do |task| %>
    <% if task.complete == true %>
      <li class ='complete_task'><a href="/tasks/<%= task.id %>"><%= task.description %></a></li>
    <% else %>
      <li>
        <a href="/tasks/<%= task.id %>"><%= task.description %></a>

        <form action="/tasks/<%= task.id %>" method="post">
          <input name="_method" type="hidden" value="patch">
          <input name="complete" type="hidden" value="true">
          <input name="description" type="hidden" value="<%= task.description %>">
          <button type="submit" class="btn btn-success btn-xs">Mark Done</button>
        </form>
      </li>
    <% end %>
  <% end %>
</ul>

<button type="button" class="btn btn-default btn-xs"><a href="/tasks/new_task">New Task</a></button>
